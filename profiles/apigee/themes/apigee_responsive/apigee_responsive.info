name = Apigee Responsive
description = Makes the apigee theme responsive with a new up to date UI.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Apigee Specific Regions
;;;;;;;;;;;;;;;;;;;;;

regions[homepage_header] = Homepage Header
regions[frontpage_panel_left] = Frontpage Panel Left
regions[frontpage_panel_center] = Frontpage Panel Center
regions[frontpage_panel_right] = Frontpage Panel Right

; Settings
; --------------
settings[bootstrap_navbar_position] = 'fixed-top'
settings[bootstrap_navbar_inverse] = 1
settings[bootstrap_tooltip_placement] = 'top'
settings[bootstrap_region_well-sidebar_second] = 'well'
settings[bootstrap_region_well-sidebar_first] = 'well'
settings[bootstrap_cdn] = 0

settings[header_bg_color] = #FF4300
settings[header_txt_color] = #FFFFFF
settings[header_hover_bg_color] = #E02E01
settings[header_hover_txt_color] = #FFFFFF
settings[link_color] = #137AAA
settings[link_hover_color] = #0B4965
settings[footer_bg_color] = #FFFFFF
settings[footer_link_color] = #0B4965
settings[footer_link_hover_color] = #0B4965
settings[button_background_color] = #009FD0
settings[button_text_color] = #FFFFFF

settings[footer_position] = fixed

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css

